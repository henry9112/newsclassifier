<tr>
	<td class="toggle">
	<%= link_to classifier.name, classifier_path(classifier)%>
	<%= abutton_to 'Edit', edit_classifier_path(classifier),{:style=>'btn-small'}%>
	</td>
    <td><%= classifier_type(classifier)  %></td>
	<td><%= reliability_plot(classifier) rescue nil %></td>
	<td><%= classifier.categories.size %></td>
	<td><% classifier.categories.each do | cat | -%>
		<%= link_to "#{cat.name.capitalize}:  #{cat.percent.round(1)}%", documents_path(:category=>cat.id) -%>
		<% end %> 
	</td>
	<td><%= classifier.classifications.size %></td>
	<td><%= abutton_to 'Classify documents', classify_classifier_url(classifier),{style:'btn-small'} unless classifier.type.blank?%></td>
</tr>