<h2>All classifiers</h2>
<table class="table table-striped table-condensed">
  <thead><tr><th>Classifier</th><th>Type</th><th>Categories</th></thead>
    <tbody>
      <% @classifiers.each do |classifier|%>
        <tr class="<%=cycle('odd','even')%>">
        <td><%= link_to classifier.name, classifier_path(classifier)%></td>
        <td><%= classifier_type(classifier)%></td>
        <td><%= pluralize(@classifier.categories.size,'category')%></td>
        </tr>
      <% end %>
</tbody>
</table>

<p>
  <%= abutton_to 'Add manual', new_classifier_path %> 
  <%= abutton_to 'Add dictionary', new_classifier_path(:type=>'dict')%>
  <%= abutton_to 'Add external', new_classifier_path(:type=>'ext')%>
</p>