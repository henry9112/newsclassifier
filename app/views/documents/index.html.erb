<div class="btn-group pull-right">
	<%= abutton_to 'Export CSV', {format:'csv',params:params},{icon:'list-alt'}%>
<button class="btn dropdown-toggle" data-toggle="dropdown">
  <span class="caret"></span>
</button>
<ul class="dropdown-menu">
	<li><%= link_to 'Headlines', {format:'txt'}%></li>
	<li><%= link_to 'Links', {format:'txt',links:true}%></li>
</ul>

  
</div>
<h2>Documents in the project</h2>

<p class="lead">The project contains  <%=pluralize(@project.documents.count, 'document')%>. <%= link_to 'Start coding!', document_path(@next)  if @next%>

</p>



<table class="table table-striped table-condensed">
 <thead>
    <th>Title</th>
    <th>Source</th>
    <th>Published</th>
    <th>Score</th>
  </thead>

<% @documents.each do | document | %>
  <tr>
	<td><%=link_to document.title, document, :title=>document.url%></td>
  <td><%= link_to short_source(document.source), document.source%>
	<%= link_to ' (F) ', documents_path(:source=>document.source) %></td>
    <td><%=h document.pubdate.strftime('%Y-%m-%d %H:%M')%></td>
    <td></td>
  </tr>
<% end %>
</table>

<p><%= paginate @documents, :window=>10, :theme => 'twitter-bootstrap'%></p>

